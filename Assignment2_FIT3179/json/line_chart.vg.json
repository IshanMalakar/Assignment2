{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Unemployment Rate Over Time for Victoria",
  "data": {
    "url": "../data/Unemployment_Line_chart.csv",
    "format": {"type": "csv"}
  },
  "mark": "line",
  "encoding": {
    "x": {
      "field": "Month",
      "type": "ordinal",
      "title": "Month",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "Unemployment (%)",
      "type": "quantitative",
      "title": "Unemployment Rate (%)"
    },
    "color": {
      "field": "Year",
      "type": "nominal",
      "title": "Year"
    },
    "tooltip": [
      {"field": "Month", "type": "nominal", "title": "Month"},
      {"field": "Year", "type": "nominal", "title": "Year"},
      {"field": "Unemployment (%)", "type": "quantitative", "title": "Unemployment Rate (%)"}
    ]
  },
  "params": [
    {
      "name": "yearFilter",
      "value": null,
      "bind": {
        "input": "select",
        "options": [
          null, "2018", "2019", "2020", "2021", "2022", "2023"
        ],
        "labels": [
          "Show All", "2018", "2019", "2020", "2021", "2022", "2023"
        ],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "yearFilter == null || datum.Year == yearFilter"
    }
  ]
}
