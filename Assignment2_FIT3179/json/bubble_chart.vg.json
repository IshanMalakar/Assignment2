{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Employment Size vs. Growth by Industry and Region",
  "data": {
    "url": "../data/Bubble_chart_.csv",
    "format": {"type": "csv"}
  },
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "Industry",
      "type": "nominal",
      "title": "Industry",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "Employment growth 11-21(%)",
      "type": "quantitative",
      "title": "Employment Growth (%)"
    },
    "size": {
      "field": "Employment size",
      "type": "quantitative",
      "title": "Employment Size",
      "scale": {"range": [100, 1000]}
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Region"
    },
    "tooltip": [
      {"field": "Industry", "type": "nominal", "title": "Industry"},
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "Employment size", "type": "quantitative", "title": "Employment Size"},
      {"field": "Employment growth 11-21(%)", "type": "quantitative", "title": "Employment Growth (%)"}
    ]
  }
}
